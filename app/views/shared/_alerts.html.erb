<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Luke Davis Portfolio", sticky:false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Luke Davis Portfolio", sticky:false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Luke Davis Portfolio", sticky:false) %>
<% end %>